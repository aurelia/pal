{
  "name": "aurelia-pal",
  "version": "1.4.0",
  "description": "Aurelia's platform abstraction layer (PAL).",
  "keywords": [
    "aurelia",
    "pal"
  ],
  "homepage": "http://aurelia.io",
  "bugs": {
    "url": "https://github.com/aurelia/pal/issues"
  },
  "license": "MIT",
  "author": "Rob Eisenberg <rob@bluespire.com> (http://robeisenberg.com/)",
  "main": "dist/commonjs/index.js",
  "typings": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "http://github.com/aurelia/pal"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^1.3.4",
    "rimraf": "^2.6.2",
    "@types/jasmine": "^2.6.3",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-typescript": "^3.0.8",
    "tslint": "^5.8.0",
    "typedoc": "0.8.0",
    "typescript": "^2.6.1"
  },

  "scripts": {
    "build": "npm run build:amd & npm run build:commonjs & npm run build:system & npm run build:native-modules & npm run build:es2015",
    "prebuild:amd": "rimraf dist/amd dist/types",
    "build:amd": "tsc -m AMD --outDir dist/amd -d --declarationDir dist/types",
    "prebuild:commonjs": "rimraf dist/commonjs",
    "build:commonjs": "tsc -m CommonJS --outDir dist/commonjs",
    "prebuild:system": "rimraf dist/system",
    "build:system": "tsc -m System --outDir dist/system",
    "prebuild:native-modules": "rimraf dist/native-modules",
    "build:native-modules": "tsc -m ESNext --outDir dist/native-modules",
    "prebuild:es2015": "rimraf dist/es2015",
    "build:es2015": "tsc -m ES2015 -t ES2015 --outDir dist/es2015",

    "lint": "tslint -p tsconfig.json",

    "test": "karma start --single-run",
    "test-watch": "karma start",

    "predoc": "rimraf doc/api.json && rimraf doc/temp && tsc -m AMD --outFile doc/temp/index.js -d && node doc/shape-defs",
    "doc": "typedoc --json doc/api.json --excludeExternals --includeDeclarations --mode modules --name aurelia-pal doc/temp/index.d.ts",
    "postdoc": "node doc/shape-doc && rimraf doc/temp",

    "changelog": "conventional-changelog -p angular -i doc/CHANGELOG.md -s",
    "bump-version": "npm --no-git-tag-version version",
    "precut-release": "npm run test",
    "cut-release": "npm run changelog && npm run build && npm run doc"
  },

  "aurelia": {
    "documentation": {
      "articles": []
    }
  },

  "jspm": {
    "registry": "npm",
    "jspmPackage": true,
    "main": "aurelia-pal",
    "format": "amd",
    "directories": {
      "dist": "dist/amd"
    }
  }
}
