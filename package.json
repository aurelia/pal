{
  "name": "aurelia-pal",
  "version": "1.4.0",
  "description": "Aurelia's platform abstraction layer (PAL).",
  "keywords": [
    "aurelia",
    "pal"
  ],
  "homepage": "http://aurelia.io",
  "bugs": {
    "url": "https://github.com/aurelia/pal/issues"
  },
  "license": "MIT",
  "author": "Rob Eisenberg <rob@bluespire.com> (http://robeisenberg.com/)",
  "main": "dist/commonjs/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "http://github.com/aurelia/pal"
  },
  "devDependencies": {
    "rimraf": "latest",
    "jasmine-core": "^2.4.1",
    "karma": "^1.1.2",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-jspm": "^2.2.0",
    "typescript": "^2.6.1"
  },

  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean",
    "build": "npm run build:amd && npm run build:commonjs && npm run build:system && npm run build:native && npm run build:es2015",
    "build:amd": "tsc -m AMD --outDir dist/amd -d --declarationDir dist",
    "build:commonjs": "tsc -m CommonJS --outDir dist/commonjs",
    "build:system": "tsc -m System --outDir dist/system",
    "build:native": "tsc -m ESNext --outDir dist/native-modules",
    "build:es2015": "tsc -m ES2015 -t ES2015 --outDir dist/es2015"
  },

  "aurelia": {
    "documentation": {
      "articles": []
    }
  },

  "jspm": {
    "registry": "npm",
    "jspmPackage": true,
    "main": "aurelia-pal",
    "format": "amd",
    "directories": {
      "dist": "dist/amd"
    }
  }
}
